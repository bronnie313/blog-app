<nav class="fluid-container d-flex justify-content-around navbar navbar-expand-lg navbar-light bg-light">
    <div class="navbar-brand">
        <h1 class="m-2">List of Users</h1>
    </div>
    <%= button_to "Logout", destroy_user_session_path, method: :delete %>
</nav>
<ul class="fluid-container">
    <% @users.each do |user| %>
        <a href="<%= user_path(user) %>" class="post-view">
        <li class="p-2">
            <div class="user-pic">
                <img src="<%= user.photo %>" alt="<%= user.name %> DP">
            </div>
            <div class="p-2 border border-dark">
                <h2 class="mt-3"><%= user.name %></h2>
                <p class="num-posts">Number of posts: <%= user.posts.count %></p>
            </div>
        </li>
        </a>
    <% end %>
</ul>
