<div class="container d-flex flex-column justify-content-center align-items-center w-50 mt-4">
<h2>Forgot your password?</h2>
<div class="'d-flex flex-column w-100">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'w-100' %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>